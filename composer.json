{
    "name": "kpicaza/sudoku",
    "description": "Sudoku game program",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Kpicaza\\Sudoku\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\Kpicaza\\Sudoku\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "symfony/var-dumper": "^6.2",
        "nunomaduro/collision": "^6.0",
        "vimeo/psalm": "^5.9",
        "phpro/grumphp": "^1.15",
        "symplify/easy-coding-standard": "^11.3"
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    },
    "scripts": {
        "check-all": [
            "@cs-check",
            "@test",
            "@static"
        ],
        "cs-check": "ecs check src tests",
        "cs-fix": "ecs check src tests --fix",
        "test": "phpunit",
        "static": "psalm"
    }
}
